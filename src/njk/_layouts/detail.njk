{% extends '_layouts/base.njk' %}

{% block content %}
<article class="container">
  <div class="row">
    <div class="col-sm-4 left-rail">
      {% block info %}
        <img src="img/members/{{ members.image }}" alt="band member" class="img-fluid">
        <p class="members-name">{{ members.name }}</p>
        <p class="members-instruments">{{ members.instruments }}</p>
        <p class="members-tenure">{{ members.tenure }}</p>
        <p class="members-birthplace">{{ members.birthplace }}</p>
        <p class="members-birthdate">{{ members.birthdate }}</p>
      {% endblock %}
    </div>
    <div class="col-sm-8">
      {% block story %}
          <h1>{{ members.name }}</h1>
          <p>{{ members.text | safe}}</p>
      {% endblock %}

    </div>
  </div>
</article>
{% endblock %}
