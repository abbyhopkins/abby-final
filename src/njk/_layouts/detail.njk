{% extends '_layouts/base.njk' %}

{% block content %}
<article class="container">
  <div class="row">
    <div class="col-sm-4 left-rail">
      {% block info %}
        <img src="img/members/{{ members.image }}" alt="band member" class="img-fluid">
        <h3>About {{ members.name }}</h3>
        <ul class="members-info">
          <li class="members-instruments">Instruments: {{ members.instruments }}</li>
          <li class="members-tenure">Tenure: {{ members.tenure }}</li>
          <li class="members-birthplace">Birthplace: {{ members.birthplace }}</li>
          <li class="members-birthdate">Birthdate: {{ members.birthdate }}</li>
        </ul>
      {% endblock %}
    </div>
    <div class="col-sm-8">
      {% block story %}
          <h2>{{ members.name }}</h2>
          <p>{{ members.text | safe}}</p>
      {% endblock %}

    </div>
  </div>
</article>
{% endblock %}
